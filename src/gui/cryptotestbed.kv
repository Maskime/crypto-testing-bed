#:import Exploration gui.widgets

<Exploration>:
    orientation: 'vertical'
    symbols_buttons: buttons
    symbols_graph: graph
    market_filter: markets

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Filtering'
                with_previous: False
            ActionOverflow:
            ActionGroup:
                text: 'Markets'
                id: markets
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (.2, 1)
            ScrollView:
                do_scroll_x: False
                GridLayout:
                    id: buttons
                    cols: 1
                    spacing: 2
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            id: graph
            size_hint: (.8, 1)


<CTBMain>:
    do_default_tab: False

    TabbedPanelItem:
        text: 'Exploration'
        Exploration:
            id: 'exploration_tab'
    TabbedPanelItem:
        text: 'tab2'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'
    TabbedPanelItem:
        text: 'tab3'
        RstDocument:
            text:
                '\\n'.join(("Hello world", "-----------",
                "You are in the third tab."))